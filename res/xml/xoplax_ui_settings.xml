<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Buttons -->
    <PreferenceScreen
        android:id="@+id/button_settings"
        android:fragment="com.android.settings.cyanogenmod.ButtonSettings"
        android:icon="@drawable/ic_settings_buttons"
        android:title="@string/button_settings" />

    <!-- Custom Animations -->
    <PreferenceScreen
        android:id="@+id/animation_settings"
        android:fragment="com.android.settings.xoplax.AnimationSettings"
        android:title="@string/animation_settings_title"
        android:icon="@drawable/ic_settings_animations" />

    <!-- Custom ProgressBar -->
    <PreferenceScreen
        android:id="progressbar_settings"
        android:fragment="com.android.settings.xoplax.ProgressBar"
        android:title="@string/progressbar_title"
        android:icon="@drawable/ic_settings_progressbar" />
    </PreferenceScreen>

    <!-- Dynamic system bars -->
    <PreferenceScreen
        android:id="@+id/dynamic_system_bar"
        android:icon="@drawable/ic_settings_dsb"
        android:fragment="com.android.settings.xoplax.DSBSettings"
        android:title="@string/dynamic_system_bars_title" />

    <!-- Gesture Anywhere -->
    <PreferenceScreen
        android:id="@+id/gesture_anywhere"
        android:fragment="com.android.settings.xoplax.gestureanywhere.GestureAnywhereSettings"
        android:icon="@drawable/ic_settings_gesture_anywhere"
        android:title="@string/gesture_anywhere_title" />

    <!-- Halo -->
    <PreferenceScreen
        android:id="@+id/halo_settings"
        android:fragment="com.android.settings.xoplax.Halo"
        android:title="@string/halo_settings_title"
        android:icon="@drawable/ic_settings_halo" />

    <!-- Heads Up -->
    <PreferenceScreen
        android:id="@+id/heads_up"
        android:fragment="com.android.settings.xoplax.headsup.HeadsUp"
        android:title="@string/heads_up_title"
        android:icon="@drawable/ic_settings_heads_up" />

    <!-- Lock screen -->
    <PreferenceScreen
        android:id="@+id/lock_screen_settings"
        android:fragment="com.android.settings.cyanogenmod.LockscreenInterface"
        android:title="@string/lock_screen_title"
        android:icon="@drawable/ic_settings_lockscreen" />

    <!-- Notification Bar -->
    <PreferenceScreen
        android:id="@+id/notification_bar_settings"
        android:fragment="com.android.settings.cyanogenmod.NotificationDrawer"
        android:icon="@drawable/ic_notify_open_normal"
        android:title="@string/notification_drawer_title" />

    <!-- XoplaX Update -->
    <PreferenceScreen
        android:id="@+id/xoplax_update"
        android:title="@string/xoplax_update_title"
        android:icon="@drawable/ic_settings_xoplaxstats">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.xoplax.update"
            android:targetClass="com.xoplax.update.XoplaXUpdate" />
    </PreferenceScreen>

    <!-- Recent Panel Settings -->
    <PreferenceScreen
        android:id="@+id/recents_panel"
        android:fragment="com.android.settings.pac.RecentsPanelSettings"
        android:title="@string/recents_panel_settings_title"
        android:icon="@drawable/ic_settings_recents" />

    <!-- Status Bar -->
    <PreferenceScreen
        android:id="@+id/status_bar_settings"
        android:fragment="com.android.settings.cyanogenmod.StatusBar"
        android:icon="@drawable/ic_settings_statusbar"
        android:title="@string/status_bar_title" />

    <!-- Wakelock Blocker -->
    <PreferenceScreen
        android:id="wakelock_blocker"
        android:fragment="com.android.settings.xoplax.WakeLockBlocker"
        android:title="@string/wakelock_blocker"
        android:summary="@string/wakelock_blocker_header_summary"
        android:icon="@drawable/ic_wakelock_blocker" />

</PreferenceScreen>
